<% @heading = "記事追加" %>

<hr>
ファイルのアップロード
<%= secure_form_tag({:action => "picture_save"},:multipart => 'true')  %>
<input id="picture_picture" name="picture[picture]" size="30" type="file" />
<input name="commit" type="submit" value="Upload file" />
<%= end_form_tag %>

<hr>

<%= secure_form_tag :action => "add_article" %>
<%= submit_tag "save" %>
<br>
<%= date_select(:ymd2, :created_on, :start_year => 1997, :end_year => Date.today.year, :order => [:year, :month, :day]) %>
<br>
カテゴリ:<%= text_field_with_auto_complete :category, :name %>
<br>
フォーマット形式:
<select name="format">
<% don_supported_formats.each do |fmt| %>
  <option value="<%= fmt %><%= '" selected="selected' if fmt == @defaultformat %>"><%= fmt %></option>
<% end %>
</select>
<br>
著者名:<br><%= text_field_with_auto_complete :author, :name %><br>
タイトル:<br><%= text_field "article", "title", "size" => 80 %><br>
本文:<br><%= text_area "article", "body", "rows" => 40, "cols" => 80 %><br>
<%= submit_tag "save" %>
<%= end_form_tag %>

<hr>
