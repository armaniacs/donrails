<%
article = don_get_object(@enrollment.articles.first, 'html')
%>
<h2 class="date-header"><%= display_article_date(article) %></h2>
<div class="entry" id="entry-<%= article.id %>">
  <h3 class="entry-header">
    <%= article.title_to_html %>
  </h3><!-- the end of 'entry-header' -->
  <div class="entry-content">
    <div class="entry-body">
      <%= display_article_images(article) %>
      <%= article.body_to_html %>
    </div><!-- the end of 'entry-body' -->
  </div><!-- the end of 'entry-content' -->
  <p class="entry-footer">
    <%= render(don_get_theme("shared/simple-category"), "article" => article) %>
    <%= render(don_get_theme("shared/post-footer"), "article" => article) %>
    <span class="separator">|</span> 
    <%= render(don_get_theme("shared/permlink"), "article" => article) %>
  </p><!-- the end of 'entry-footer' -->
</div><!-- the end of 'entry' -->

<%= render(don_get_theme("shared/trackback"), "enrollment" => @enrollment, "article" => article) %>
<%= render(don_get_theme("shared/comment"), "enrollment" => @enrollment) %>
